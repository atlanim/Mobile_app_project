<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/home_activity"
    tools:context=".Home">


    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>


    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="322dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="201dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="input" />

    <RadioGroup
        android:id="@+id/radioGroupSearchType"
        android:layout_width="353dp"
        android:layout_height="94dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="107dp"
        android:layout_marginBottom="-25dp">

        <RadioButton
            android:id="@+id/searchByPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Playlist" />

        <RadioButton
            android:id="@+id/searchByTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Track" />

        <RadioButton
            android:id="@+id/searchByAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Album" />

        <RadioButton
            android:id="@+id/searchByArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Artist" />
    </RadioGroup>

    <Button
        android:id="@+id/buttonPlaylist"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="328dp"
        android:text="My playlist"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/serchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="312dp"
        android:layout_marginLeft="312dp"
        android:layout_marginTop="287dp"
        android:textAllCaps="false"
        android:text="Search" />

    <Button
        android:id="@+id/newPlaylisteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="280dp"
        android:layout_marginLeft="280dp"
        android:layout_marginTop="360dp"
        android:text="New playlist"
        android:textAllCaps="false"
        android:textSize="14sp" />

</RelativeLayout>
